	journal = {Journal of Experimental Marine Biology and Ecology},
	language = {en},
	number = {2},
	pages = {205--221},
	shorttitle = {Exploiting beach filling as an unaffordable experiment},
	title = {Exploiting beach filling as an unaffordable experiment: {Benthic} intertidal impacts propagating upwards to shorebirds},
	url = {https://linkinghub.elsevier.com/retrieve/pii/S0022098106003509},
	urldate = {2020-09-18},
