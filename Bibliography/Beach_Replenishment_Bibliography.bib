	doi = {10.1073/pnas.1617666114},
	file = {Yun et al 2017.pdf:/Users/parisp15/OneDrive - East Carolina University/Reference_Library/2017/Yun et al 2017.pdf:application/pdf},
	journal = {Proceedings of the National Academy of Sciences},
	number = {25},
	pages = {6539},
	title = {Ecosystem-based management and the wealth of ecosystems},
	url = {http://www.pnas.org/content/114/25/6539.abstract},
	volume = {114},
