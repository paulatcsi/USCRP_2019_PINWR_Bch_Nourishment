	keywords = {climate change, global change, human impacts, sandy shores, threats},
	language = {en},
	number = {1},
	pages = {1--12},
	shorttitle = {Threats to sandy beach ecosystems},
	title = {Threats to sandy beach ecosystems: {A} review},
	url = {http://www.sciencedirect.com/science/article/pii/S0272771408003752},
	urldate = {2020-07-10},
