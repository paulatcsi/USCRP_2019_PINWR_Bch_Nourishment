	pages = {100548},
	title = {Examination of intertidal and nearshore benthic macroinvertebrates along two non-nourished {Florida} beaches},
	url = {https://www.sciencedirect.com/science/article/pii/S2352485518304572},
	volume = {27},
	year = {2019},
