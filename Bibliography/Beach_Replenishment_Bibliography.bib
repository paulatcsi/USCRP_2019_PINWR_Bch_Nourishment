	number = {9},
	pages = {2378--2388},
	title = {{Disturbance} {Influences} {Oyster} {Community} {Richness} {and} {Evenness}, {but} {not} {Diversity}},
	url = {http://doi.wiley.com/10.1890/0012-9658(2006)87[2378:DIOCRA]2.0.CO;2},
